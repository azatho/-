page{
  width: 100%;
  height: 100%;
 
  display: flex;
  flex-direction: column;
}
.margin-tb-sm{
  margin-top: 20rpx;
  margin-bottom: 0;
  border: 1px solid rgba(245, 245, 245, 1);
}
.picker{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  align-items: center;
}
.picker view:nth-child(1){
  display: flex;
  align-items: center;
  color:rgba(51,51,51,1);
}
.picker view:nth-child(2){
  display: flex;
  align-items: center;
  color:rgba(51,51,51,1);
}
.Booking_information_list_item{
  background: #fff;
}
.ycrs{
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.ycrs view{
  width: 111.1rpx;
  padding:20rpx 0;
  border-radius:4rpx;
  background: rgba(204, 204, 204, 1);
  margin-right:20rpx;
  margin-top: 20rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  text-align: center;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.ycrs view.transport{
   width: 239.8rpx;
}
.ycrs  .isActive{
  background:rgba(255,242,211,1);
}
.xz_area_active{
  background:rgba(255,242,211,1);
  color: rgba(255, 180, 0, 1)!important;
}
.xz_area_active .wz{
  color: rgba(255, 180, 0, 1)!important;
}
.bz{
  padding: 20rpx 30rpx;
  background: #fff;
}
.Booking_information{
  display: flex;
  align-items: center;
  /* margin-top: 20rpx; */
  background: #fff;
}
.Booking_information view:nth-child(1){
  height:2rpx;
  background:rgba(245,245,245,1);
  flex: 1;
  margin-right: 10rpx;
}
.Booking_information view:nth-child(3){
  height:2rpx;
  background:rgba(245,245,245,1);
  flex: 1;
  margin-left: 10rpx;
}
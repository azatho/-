/* pages/fkjl/index.wxss */
.item{
  position: relative;
  width: 100%;
  height: 200rpx;
  background-color: white;
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.item .head{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 2rpx solid #f5f5f5;
  color: black;
  font-size: 26rpx;
}
.item .content{
margin-top: 10rpx;
overflow: hidden;
display: -webkit-box ;
-webkit-line-clamp: 2 ;
-webkit-box-orient: vertical ;
word-break: break-all ;
font-size: 26rpx;
}
.item .bottom{
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;  
  font-size: 26rpx;
}
.colorRed{
  color: #F20000;
}
.colorBlue{
  color: #0055F2;
}
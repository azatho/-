.yxsp {
  position: fixed;
  overflow: hidden;
  top: 0%;
  left: 0%;
  bottom: 100rpx;
  width: 100%;
  background: rgba(0, 0, 0, 1);
  opacity: 0.6;
  z-index: 1001;
  /* -moz-opacity: 0.5;
  opacity: 0.50;
  filter: alpha(opacity=50); */
  display: flex;
  flex-direction: column;
}

.yxsp>.hide {
  flex: 1;
}

.yxsp>.show {
  flex: 1;
  background-color: white;
  opacity: 1;
}

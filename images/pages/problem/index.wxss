/* pages/problem/index.wxss */
.problem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
}

.problem_title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin: 0 10rpx;
}

.problem_list {
  width: 100%;
  height: 0;
  overflow: hidden;
  padding: 0 50rpx;
  background: #fff;
  font-size: 8px;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 12px
}

.active {
   height: auto;
}
.jt1{
  transform: rotate(0deg);
  transition: all .5s;
}
.jt2{
  transform: rotate(-90deg);
}
/* pages/yuyue/index.wxss */
.my_yuyue {
  padding: 0 20rpx;
}

.yuyue_list {
  margin-top: 10rpx;
  padding: 0 0 30rpx 0;
  background: #fff;
}

.yuyue_title {
  background: rgba(255, 218, 128, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.yuyue_title_left view,
text {
  margin: 5rpx 0;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.yuyue_title_right {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.yuyue_content_list {
  display: flex;
  margin: 30rpx 0;
  align-items: flex-start;
  padding: 0 20rpx;
}

.yuyue_content_list text {
  color: rgba(51, 51, 51, 1);
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 300;
  margin: 0;
}

.yuyue_content_list view {
  flex: 1;
  color: rgba(51, 51, 51, 1);
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 300;
  overflow: hidden;
  word-wrap: break-word;
}

.yuyue_content_list .yuyuema {
  color: rgba(255, 180, 0, 1);
}

.yuyuefoot {
  height: 50rpx;
}

.yuyuefoot view {
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  border: 1px solid rgba(255, 180, 0, 1);
  float: right;
  margin: 0 22rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 300;
  color: rgba(255, 180, 0, 1);
}
.yuyuefoot view.yy_bg {
  background: rgba(255, 180, 0, 1);
  color: rgba(51, 51, 51, 1);
}